# Kavach360 Backend Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_PATH=./data/kavach360.db
DB_BACKUP_PATH=./data/backups/

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080,file://

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# WebSocket Configuration
WS_PORT=3001
WS_CORS_ORIGIN=*

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Blockchain Configuration (Optional)
BLOCKCHAIN_ENABLED=false
ETHEREUM_RPC_URL=
CONTRACT_ADDRESS=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@kavach360.com

# SMS Configuration (Optional)
SMS_API_KEY=
SMS_API_URL=

# Geofencing Configuration
GEOFENCE_DEFAULT_RADIUS=1000
GEOFENCE_MAX_RADIUS=10000
GEOFENCE_MIN_RADIUS=50

# Alert Configuration
ALERT_RETENTION_DAYS=30
SOS_ALERT_TIMEOUT=300000
