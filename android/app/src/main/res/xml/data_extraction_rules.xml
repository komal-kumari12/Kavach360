<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="auth_prefs.xml"/>
        <exclude domain="sharedpref" path="user_data.xml"/>
        <exclude domain="database" path="secure_db.db"/>
        <exclude domain="file" path="private/"/>
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="temp/"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="sharedpref" path="auth_prefs.xml"/>
        <exclude domain="sharedpref" path="user_data.xml"/>
        <exclude domain="database" path="secure_db.db"/>
        <exclude domain="file" path="private/"/>
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="temp/"/>
    </device-transfer>
</data-extraction-rules>
